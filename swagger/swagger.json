{
  "swagger": "2.0",
  "info": {
    "title": "Marvel Characters API",
    "description": "API for managing Marvel characters from the Comics and the MCU.",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/characters": {
      "get": {
        "description": "Get all Marvel characters",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Create a new Marvel character",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Character"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/characters/{id}": {
      "get": {
        "description": "Get a Marvel character by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Update a Marvel character",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Character"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete a Marvel character",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Character": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Spider-Man"
        },
        "alias": {
          "type": "string",
          "example": "Peter Parker"
        },
        "universe": {
          "type": "string",
          "example": "MCU"
        },
        "powers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": ["Wall-crawling", "Spider-Sense"]
        },
        "firstAppearance": {
          "type": "string",
          "example": "Amazing Fantasy #15"
        }
      }
    }
  }
}
